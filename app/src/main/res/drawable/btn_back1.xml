<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/design_default_color_primary_dark" />
            <stroke android:width="1dp" android:color="@color/white" />
            <corners android:radius="125dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item>

        <shape>
            <gradient android:angle="0"
                android:endColor="#AAA5A5" android:startColor="@color/design_default_color_primary" />


            <stroke android:width="1.5dp" android:color="@color/black" />
            <corners android:radius="225dp"/>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>